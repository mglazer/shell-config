buildclasspath()
{
    CLASSPATH=""
    for file in $1/*.jar; do
        CLASSPATH=$file:$CLASSPATH
    done
}

grepjar() {
    if [ -z $1 ]; then
        echo "Must supply a search term"
        return
    fi

    for file in *.jar; do
        echo "$file:"
        jar -tvf $file | grep $1
    done
}

rezsh() {
    zcompile ~/.zshrc
    zcompile ~/.zcompdump
}

