buildclasspath()
{
    CLASSPATH=""
    for file in $1/*.jar; do
        CLASSPATH=$file:$CLASSPATH
    done
}

grepjar() {
    if [ -z $1 ]; then
        echo "Must supply a search term"
        return
    fi

    for file in **/*.jar; do
        echo "$file:"
        jar -tvf $file | grep $1
    done
}

rezsh() {
    zcompile ~/.zshrc
    zcompile ~/.zcompdump
    source ~/.zshrc
}

ny() {
    remote_to_server $1 "nym008" $2
}

dc() {
    remote_to_server $1 "wdc009" $2
}

remote_to_server() {
    if [ -z $1 ]; then
        echo "Must supply machine number"
        return
    fi

    local serverNumber=$(printf "%.2d" $1)

    local hostname=$2

    local cmd='ssh'
    if [ ! -z $3 ]; then
        cmd=$3
    fi

    ${cmd} www-${hostname}-${serverNumber}.px.qc
}


