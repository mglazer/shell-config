function fgr() {
    PATTERN=$1
    START=$2

    if [ -z $2 ]; then
        START='.'
    fi

    grep -H -n -R --include="*" --color -e $PATTERN $START
}


#alias fgr='grep -H -n -R --include="*" --color -e'
